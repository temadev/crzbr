{
  "express": {
    "view cache": false,
    "view engine": "jade",
    "views": "path:./public/templates"
  },

  "view engines": {
    "jade": {
      "module": "jade",
      "renderer": "__express"
    }
  },

  "databaseConfig": {
    "host": "localhost",
    "database": "crzbr"
  },

  "bcrypt": {
    "difficulty": 8
  },

  "middleware": {

    "devtools": {
      "enabled": true,
      "priority": 35,
      "module": {
        "name": "kraken-devtools",
        "arguments": [
          "path:./public",
          "path:./.build",
          {
            "css": {
              "module": "kraken-devtools/plugins/less",
              "files": "/css/**/*.css"
            },
            "copier": {
              "module": "kraken-devtools/plugins/copier",
              "files": "**/*"
            }
          }
        ]
      }
    },

    "serverError": {
      "enabled": true,
      "priority": 140,
      "module": {
        "name": "kraken-js/middleware/500",
        "arguments": [ "errors/500" ]
      }
    },

    //flash messaging middleware
    "flash": {
      "priority": 91,
      "enabled": true,
      "module": {
        "name":"connect-flash",
        "method": "flash"
      }
    },

    //test if user session required to view page and if user has permission for given page
    "isAuthenticated": {
      "enabled": true,
      "priority": 111,
      "module": {
        "name":"path:./lib/auth",
        "method": "isAuthenticated"

      }
    },

    //add the user to the response object
    "injectUser": {
      "enabled": true,
      "priority": 112,
      "module": {
        "name":"path:./lib/auth",
        "method": "injectUser"
      }
    }
  }
}
