// START Sidebar (left)
nav.sidebar
    ul.nav
        // START user info
        li
            .item.user-block(data-toggle="collapse-next", class="has-submenu")
                // User picture
                if user.photo
                    .user-block-picture
                        img.img-thumbnail.img-circle(src='#{user.photo}', width="60", height="60")
                        // Status when collapsed
                        .user-block-status
                            .point.point-success.point-lg
                // Name and Role
                .user-block-info
                    span.user-block-name.item-text #{user.firstname} #{user.lastname}
                    span.user-block-role #{user.role}
                    // START Dropdown to change status
                    .btn-group.user-block-status
                        button.btn.btn-xs.dropdown-toggle(type="button", data-toggle='dropdown', data-play="fadeIn", data-duration="0.2")
                            .point.point-success
                            | Онлайн
                        ul.dropdown-menu.text-left.pull-right
                            li: a(href='#')
                                .point.point-success
                                | Онайн
                            li: a(href='#')
                                .point.point-warning
                                | Ушел
                            li: a(href='#')
                                .point.point-danger
                                | Занят
                    // END Dropdown to change status
            // START User links collapse
            ul.nav.collapse
                li: a(href="/profile") Мой профиль
                li: a(href="/profile/settings") Настройки
                li.divider
                li: a(href="/logout") Выйти
            // END User links collapse
        // END user info
        // START Menu
        +build-menu-items(nav.menu)
        // END Menu
        // Sidebar footer
        li.nav-footer
            .nav-footer-divider
            // START button group
            .btn-group.text-center
                a(href="/profile/settings", type="button", data-toggle="tooltip", data-title="Настройки").btn.btn-link
                    em.fa.fa-cog.text-muted
                a(href="/logout", type="button", data-toggle="tooltip", data-title="Выход").btn.btn-link
                    em.fa.fa-sign-out.text-muted
            // END button group
// END Sidebar (left)