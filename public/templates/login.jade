extends layouts/page
block content
    .row.row-table(style="height: 100%; padding: 50px 0")
        .col-lg-3.col-md-6.col-sm-8.col-xs-12.align-middle
            // START panel
            .panel.panel-default.panel-flat(data-toggle="play-animation",data-play="fadeInUp",data-offset="0")
                p.text-center.mb-lg
                    br
                    a(href="/")
                        strong Crzbr
                .text-center.mb-lg
                    if messages
                        each message in messages
                            p: strong= message
                .panel-body
                    form.mb-lg#loginForm(role='form', method="post", action="/login")
                        .form-group.has-feedback
                            input#email.form-control(type='email', name="email", placeholder='Email')
                            span.fa.fa-envelope.form-control-feedback.text-muted
                        .form-group.has-feedback
                            input#password.form-control(type='password', name="password", placeholder='Пароль')
                            span.fa.fa-lock.form-control-feedback.text-muted
                        button.btn.btn-block.btn-primary(type='submit') Войти <i class="fa fa-sing-in"></i>
                        input(type="hidden", name="_csrf", value="#{_csrf}")
            // END panel