extends layouts/page
block content
  .row.row-table(style="height: 100%; padding: 50px 0")
    .col-lg-3.col-md-6.col-sm-8.col-xs-12.align-middle
      .panel.panel-default.panel-flat(data-toggle="play-animation",data-play="fadeInUp",data-offset="0")
        p.text-center.mb-lg
          br
          a(href="/"): strong CrazyBuyer
        p.text-center.mb-lg
          strong РЕГИСТРАЦИЯ
        .text-center.mb-lg
          if messages && messages.length > 0
            p: strong= messages[0]
        .panel-body
          form.mb-lg#registerForm(role='form', method="post", action="/register")
            .form-group.has-feedback
              input#phone.form-control(type='text', name="phone", placeholder='Номер телефона')
              span.fa.fa-phone.form-control-feedback.text-muted
            .form-group.has-feedback
              input#name.form-control(type='text', name="name", placeholder='Имя Фамилия')
              span.fa.fa-user.form-control-feedback.text-muted
            button.btn.btn-block.btn-primary(type='submit') Зарегистрироваться <i class="fa fa-sign-in"></i>
            input(type="hidden", name="_csrf", value="#{_csrf}")
